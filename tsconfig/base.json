{
  "$schema": "https://json.schemastore.org/tsconfig",
  "exclude": ["../node_modules", "../dist", "../docs"],
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022", "ScriptHost"],
    "jsx": "preserve",
    "module": "Node16",
    "moduleResolution": "Node16",
    "types": ["node"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
